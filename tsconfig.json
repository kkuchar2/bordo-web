{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "images": [
        "images"
      ],
      "state/*": [
        "state/*"
      ],
      "tools/*": [
        "tools/*"
      ],
      "configs": [
        "configs"
      ],
      "components/*": [
        "components/*"
      ],
      "util/*": [
        "util/*"
      ]
    },
    "rootDir": "src",
    "strict": false,
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
